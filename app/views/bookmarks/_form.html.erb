<% if @bookmark.errors.any? %>
  <div style="color: red; border: 1px solid red; padding: 10px; margin-bottom: 15px;">
    <h4><%= @bookmark.errors.count %>件のエラーがあります:</h4>
    <ul>
      <% @bookmark.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @bookmark) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </p>

  <p>
    <%= f.label :hiduke, "日付" %><br>
    <%= f.text_field :hiduke %>
  </p>

  <%= f.submit %>
<% end %>
